<Window x:Class="MessageSigner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessageSigner"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="Signature" Text="Signature : " Width="100" Height="25" Margin="45,167,655,242" />
        <TextBlock x:Name="OutputSignature" Width="500" Height="25" Margin="150,160,150,234" />
        <Button Content="Copy to Clipboard" Click="CopyOutputSignatureToClipBoard" Width="100" Height="25" Margin="655,168,45,241" />
        <Button Content="Copy to Clipboard" Click="CopyOutputPublicKeyToClipBoard" Width="100" Height="25" Margin="655,131,45,278" />
        <TextBlock x:Name="PublicKey" Text="Public key : " Width="100" Height="25" Margin="45,131,655,278" />
        <TextBlock x:Name="OutputPublicKey" Width="500" Height="25" Margin="150,123,150,271" />
        <TextBox x:Name="InputField" Width="500" Height="25" Margin="150,205,150,204" RenderTransformOrigin="0.497,-1.492" />
        <Button Content="Sign" Click="SignButtonHandler" Width="100" Height="50" Margin="350,235,350,149"/>
    </Grid>
</Window>
